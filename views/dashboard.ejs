<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet"  href="styles.css">
    <title>Dashboard</title>
</head>
<body>
    <h1>Your Dashboard <a class = "name"><%= username %></a></h1>
    <!-- <a href="/profile" class="profile-button">Profile</a> -->
    <a href="/logout" class="logout-button">Logout</a>
    <iframe src="<%= iframeUnrl %>" width="100%" height="850" frameborder="0"></iframe>
    <script>
        function checkSession() {
            fetch('/check_session')
                .then(response => response.json())
                .then(data => {
                    if (!data.valid) {
                        alert("Your session has expired. Please log in again.");
                        window.location.href = "/login";
                    }
                })
                .catch(error => {
                    console.error('Error checking session:', error);
                });
        }

        setInterval(checkSession, 5000); // Check session every 5 seconds
    </script>
</body>
</html>


